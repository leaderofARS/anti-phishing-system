{
  "manifest_version": 3,
  "name": "PhishGuard - Anti-Phishing Protection",
  "version": "1.0.0",
  "description": "Real-time phishing protection that intercepts and analyzes suspicious links",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "declarativeNetRequest",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}
